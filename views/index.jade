extends layout

block content
    header.intro-header(style="background-image: url('/images/home-bg.jpg')")
      .container
        .row
          .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
            .site-heading
              h1 blog_express
              hr.small
              span.subheading A simple blog.
    // Main Content
    .container
      .row
        .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
          each article, i in articles
           .post-preview
            a(href='/articles/show/#{article._id}')
              h2.post-title #{article.title}
              h3.post-subtitle #{article.subtitle}
            p.post-meta
              | Posted by #{article.author}
              |  on #{moment(article.created_at).format('MMMM Do YYYY, h:mm:ss a')}
          hr
